<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>rd search expander</name>
	<author>Peter Reill</author>
	<creationDate>December 2016</creationDate>
	<copyright>Copyright (C) 2016 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>post@reilldesign.com</authorEmail>
	<authorUrl>www.reilldesign.com</authorUrl>
	<version>1.0.0</version>
	<description>
	<![CDATA[<style type="text/css" media="all"></style>
		<div>
			<div>spice up your site! <a title="Visit the official website!" href="http://www.reilldesign.com" target="_blank">www.reilldesign.com</a></div>
			<br /><br />
			<div><a title="Visit the official website!" href="http://www.reilldesign.com" target="_blank">
				<img class="eximg" src="../modules/mod_rd_search_expander/assets/images/expander.png" border="0" alt="reilldesign logo" />
			</a><br /><br />
			</div>
		</div>]]>
	</description>
	<updateservers>
		<server type="extension" priority="2" name="rd search expander updates">http://www.reilldesign.com/jed_xml_updates/searchexpander.xml</server>
	</updateservers>
	<files>
		<filename module="mod_rd_search_expander">mod_rd_search_expander.php</filename>
		<folder>assets</folder>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_rd_search_expander.ini</language>
		<language tag="en-GB">en-GB.mod_rd_search_expander.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_SEARCH" />
	<config>
		<fields name="params">
			<fieldset name="basic">
			    <field
			        name = "include-jquery"
			        type = "radio"
			        label = "MOD_RD_SEARCH_EXPANDER_FIELD_JQUERY_LABEL"
			        description = "MOD_RD_SEARCH_EXPANDER_FIELD_JQUERY_DESC"
					class="btn-group btn-group-yesno"
			        default = "0"
			        >
			        <option value = "1">JYES</option>
			        <option value = "0">JNO</option>
			        </field>

				<field
					name="text"
					type="text"
					label="MOD_RD_SEARCH_EXPANDER_FIELD_TEXT_LABEL"
					description="MOD_RD_SEARCH_EXPANDER_FIELD_TEXT_DESC"
				/>

				<field
					name="opensearch"
					type="radio"
					label="MOD_RD_SEARCH_EXPANDER_FIELD_OPENSEARCH_LABEL"
					description="MOD_RD_SEARCH_EXPANDER_FIELD_OPENSEARCH_DESC"
					class="btn-group btn-group-yesno"
					default="1"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
					name="opensearch_title"
					type="text"
					label="MOD_RD_SEARCH_EXPANDER_FIELD_OPENSEARCH_TEXT_LABEL"
					description="MOD_RD_SEARCH_EXPANDER_FIELD_OPENSEARCH_TEXT_DESC"
					showon="opensearch:1"
				/>

				<field
					name="set_itemid"
					type="menuitem"
					label="MOD_RD_SEARCH_EXPANDER_FIELD_SETITEMID_LABEL"
					description="MOD_RD_SEARCH_EXPANDER_FIELD_SETITEMID_DESC"
					default="0"
					>
					<option value="0">MOD_RD_SEARCH_EXPANDER_SELECT_MENU_ITEMID</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
					rows="3"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
					default="1"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
					default="900"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="itemid"
					>
					<option value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
