<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade">
	<name>Flexbanners</name>
	<author>inch hosting</author>
	<creationDate>2024/11/10</creationDate>
	<copyright>Copyright (c)2009-2024 inch communications ltd</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>adimn@inchhosting.co.uk</authorEmail>
	<authorUrl>www.inchhosting.co.uk</authorUrl>
	<version>5.1.07</version>
	<description>This module shows adverts in a flexible manner</description>
	<namespace path="src">Inch\Module\Flexbanners</namespace>
	<files>
		<filename module="mod_flexbanners">mod_flexbanners.php</filename>
		<filename>mod_flexbanners.xml</filename>
		<filename>index.html</filename>
		<filename>swfobject.js</filename>
		<filename>trans.gif</filename>
		<folder>src</folder>		
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/mod_flexbanners.ini</language>
		<language tag="en-GB">language/en-GB/mod_flexbanners.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic"
			addfieldprefix="Inch\Component\Flexbanners\Administrator\Field">
				<field
				name="locationid"
				type="flexbannerlocation"
				extension="com_flexbanners"
				default=""
				label="MOD_FLEXBANNER_LOCATIONID"
				description="MOD_FLEXBANNER_LOCATIONIDD" />
				<field name="numberbanner" type="integer" class="btn-group" first="1" last="20" step="1" default="1" label="MOD_FLEXBANNER_NUMBER" description="MOD_FLEXBANNER_NUMBERD">
				</field>
				<field
					name="ordering"
					type="list"
					default="0"
					label="MOD_FLEXBANNERS_FIELD_RANDOMISE_LABEL"
					description="MOD_FLEXBANNERS_FIELD_RANDOMISE_DESC">
					<option
						value="down">MOD_FLEXBANNERS_VALUE_ORDERINGDOWN</option>
					<option
						value="up">MOD_FLEXBANNERS_VALUE_ORDERINGUP</option>
					<option
						value="random">MOD_FLEXBANNERS_VALUE_RANDOM</option>
				</field>

				<field name="loadlast" type="radio" class="btn-group" default="0" layout="joomla.form.field.radio.switcher" label="MOD_FLEXBANNER_LOADAFTER" description="MOD_FLEXBANNER_LOADAFTERD">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="enablecsa" type="radio" class="btn-group" default="0" layout="joomla.form.field.radio.switcher" label="MOD_FLEXBANNER_CSA" description="MOD_FLEXBANNER_CSAD">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="enabletrans" type="radio" class="btn-group" default="0" layout="joomla.form.field.radio.switcher" label="MOD_FLEXBANNER_FLASH" description="MOD_FLEXBANNER_FLASHD">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="header_text"
					type="textarea"
					filter="safehtml"
					rows="3"
					cols="40"
					label="MOD_FLEXBANNERS_FIELD_HEADER_LABEL"
					description="MOD_FLEXBANNERS_FIELD_HEADER_DESC" />

				<field
					name="footer_text"
					type="textarea"
					filter="safehtml"
					rows="3"
					cols="40"
					label="MOD_FLEXBANNERS_FIELD_FOOTER_LABEL"
					description="MOD_FLEXBANNERS_FIELD_FOOTER_DESC" />

			</fieldset>
			<fieldset name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field name="cache" type="list" default="0" label="MOD_FLEXBANNER_CACHE" description="MOD_FLEXBANNER_CACHED">
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
