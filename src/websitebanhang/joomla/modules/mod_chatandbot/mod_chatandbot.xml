<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" method="upgrade">
	<name>Live Chat and ChatBot - ChatAndBot</name>
	<author>ChatAndBot</author>
	<creationDate>05/12/2022</creationDate>
	<copyright>(C) 2022 ChatAndBot.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>help@chatandbot.com</authorEmail>
	<authorUrl>https://chatandbot.com</authorUrl>
	<version>1.0.1</version>
	<description>MOD_CHATANDBOT_XML_DESCRIPTION</description>
	<namespace path="src">Joomla\Module\mod_chatandbot</namespace>
<files>
   <filename>mod_chatandbot.xml</filename>
		<filename module="mod_chatandbot">mod_chatandbot.php</filename>
		<folder>src</folder>
		<folder>tmpl</folder>
  <folder>language</folder>
	</files>
 
	<languages>
		<language tag="en-GB">language/en-GB/mod_chatandbot.ini</language>
		<language tag="en-GB">language/en-GB/mod_chatandbot.sys.ini</language>
		<language tag="ru-RU">language/ru-RU/mod_chatandbot.ini</language>
		<language tag="ru-RU">language/ru-RU/mod_chatandbot.sys.ini</language>
  <language tag="es-ES">language/es-ES/mod_chatandbot.ini</language>
		<language tag="es-ES">language/es-ES/mod_chatandbot.sys.ini</language>
	</languages>
 
 <config>
		<fields name="params">
			<fieldset
				name="basic"
			>
			
				<field
					name="js"
					type="textarea"
					label="MOD_CHATANDBOT_TEXT"
     description="MOD_CHATANDBOT_FIELD_DESCRIPTION"
					/>
   </fieldset>
  </fields>
</config>
<updateservers>
		<server type="extension" name="ChatAndBot Updates">https://chatandbot.com/plugins/jm/updates.xml</server>
	</updateservers>
</extension>