<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade">
	<name>com_flexbanners</name>
	<creationDate>2024/11/10</creationDate>
	<author>inch hosting</author>
	<authorEmail>admin@inchhosting.co.uk</authorEmail>
	<authorUrl>inchhosting.uk</authorUrl>
	<copyright>Copyright (c)2009-2024 inch communications ltd</copyright>
	<license>This component in released under the GNU/GPL License</license>
	<version>5.1.07</version>
	<description>
		<![CDATA[
		<div align="left"><a href="//www.inchhosting.co.uk/" alt="Joomla Web Hosting from Inch" title="Joomla Web Hosting from Inch"  ><img src="components/com_flexbanners/flexbanner.png" alt="FlexBanner Logo" /></a></div>
		<div align="left"><h2>Successfully installed FlexBanner&nbsp;Component and Module</h2>
			
		FlexBanner is a powerful banner management system that allows you to choose which articles or categories a banner appears on.

		It supports the use of Flash banners and reports impressions and clicks.
		<br /><br />
		<a href="//www.inchhosting.co.uk/" alt="Joomla Web Hosting from Inch" title="Joomla Web Hosting from Inch"  >Joomla Web Hosting from Inch</a>
		<br /><br />
		</div>
		]]>
	</description>
	<namespace path="src">Inch\Component\Flexbanners</namespace>
	<scriptfile>install.script.php</scriptfile>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update> <!-- Runs on update -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<files folder="frontend">
		<folder>forms</folder>
		<folder>images</folder>
		<folder>src</folder>
		<folder>tmpl</folder>
	</files>

   <media destination="com_flexbanners" folder="media">
		<file>joomla.asset.json</file>        
		<folder>js</folder>
   </media>

	<languages folder="frontend">
		<language tag="en-GB">language/en-GB/com_flexbanners.ini</language>
	</languages>

	<administration>
		<files folder="backend">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>flexbanners.xml</filename>
			<filename>flexbanners.xml</filename>
			<filename>flexbanner.png</filename>
			<filename>flexbanner-16.png</filename>
			<folder>forms</folder>
			<folder>helpers</folder>
			<folder>images</folder>
			<folder>services</folder>
			<folder>sql</folder>
			<folder>src</folder>
			<folder>tmpl</folder>
		</files>
		<languages folder="backend">
			<language tag="en-GB">language/en-GB/com_flexbanners.ini</language>
			<language tag="en-GB">language/en-GB/com_flexbanners.sys.ini</language>
		</languages>
		<!-- Administration menu -->
		<menu  img="class:bookmark">COM_FLEXBANNERS_MENU_FLEXBANNER</menu>
		<submenu>
			<menu 
				link="option=com_flexbanners" 
				view="FlexBanners" 
				img="class:flexbanners"
				alt="FlexBanners/FlexBanners"
			>
			COM_FLEXBANNERS_MENU_FLEXBANNER
			</menu>
			<menu 
				link="option=com_categories&amp;extension=com_flexbanners" 
				view="categories" 
				img="components/com_flexbanners/flexbanner-16.png"
				alt="FlexBanners/Categories"
			>
			COM_FLEXBANNERS_MENU_CATEGORY
			</menu>
			<menu 
				link="option=com_flexbanners&amp;view=clients" 
				view="clients" 
				img="components/com_flexbanners/flexbanner-16.png"
				alt="FlexBanners/Clients"
			>
			COM_FLEXBANNERS_MENU_CLIENTS
			</menu>
			<menu 
				link="option=com_flexbanners&amp;view=links" 
				view="links" 
				img="components/com_flexbanners/flexbanner-16.png"
				alt="FlexBanners/Links"
			>
			COM_FLEXBANNERS_MENU_LINKS
			</menu>
			<menu 
				link="option=com_flexbanners&amp;view=locations" 
				view="locations" 
				img="components/com_flexbanners/flexbanner-16.png"
				alt="FlexBanners/Locations"
			>
			COM_FLEXBANNERS_MENU_LOCATIONS
			</menu>
			<menu 
				link="option=com_flexbanners&amp;view=sizes" 
				view="sizes" 
				img="components/com_flexbanners/flexbanner-16.png"
				alt="FlexBanners/Sizes"
			>
			COM_FLEXBANNERS_MENU_SIZES
			</menu>
		</submenu>
	</administration>
	<updateservers>
		<server type="extension" priority="1" name="FlexBanners"><![CDATA[https://inchhosting.uk/releases/flexbanner5_releases.xml]]></server>
	</updateservers>
</extension>