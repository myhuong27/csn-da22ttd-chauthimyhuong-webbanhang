<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Inch\Component\Flexbanners\Administrator\Field">
	<fieldset name="details">
		<field name="locationid" type="text" default="0"
			readonly="true" class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" description ="JGLOBAL_FIELD_ID_DESC"/>

		<field name="name" type="text" class="inputbox"
			size="40" label="ADMIN_FLEXBANNER_LOCATIONNAME"
			required="true" />
			
		<field name="state" type="list"
			label="JSTATUS" description="COM_FLEXBANNERS_FIELD_CLIENT_STATE_DESC"
			class="inputbox" size="1" default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

	</fieldset>
</form>
