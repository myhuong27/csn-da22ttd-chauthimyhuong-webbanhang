<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
    <name>System - Smartsupp customer care chat</name>
    <author>Flagon Digital</author>
    <authorUrl>https://flagon.digital</authorUrl>
    <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
    <copyright>Copyright (C) Flagon Digital</copyright>
    <version>1.1.5</version>
    <creationDate>March 2024</creationDate>
    <description>Smartsupp plugin for Joomla!</description>
    <files>
        <folder>language</folder>
        <filename plugin="smartsupp">smartsupp.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="smartsupp_appID"
                    type="text"
                    size="45"
                    maxlength="150"
                    label="PLG_SYSTEM_SMARTSUPP_PARAM_APPLICATION_ID_LABEL"
                    description="PLG_SYSTEM_SMARTSUPP_PARAM_APPLICATION_ID_DESC"
                />
                <field name="@spacer" type="spacer" default="" label="PLG_SYSTEM_SMARTSUPP_INTRO" description=""/>
            </fieldset>
        </fields>
    </config>
</extension>
